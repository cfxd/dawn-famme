{% comment %}Styling of the menu in the header {% endcomment %}
{% comment %}
details-disclosure>details {position: static;}
ul.list-menu.list-menu--inline {position: relative;
  ul.header__submenu.list-menu.list-menu--disclosure {
    width: 100%;
    columns: 3;
    >li {
      width: 33.333333%;
      display: inline;
      svg.icon.icon-caret {display: none;}
      ul.header__submenu.list-menu {
        background: none;
        padding-top: 0;
        margin-top: 0;
      }
    }
  }
}

ul.header__submenu.list-menu.list-menu--disclosure>li {
  >div>a.header__menu-item.link.link--text.list-menu__item, >a.header__menu-item.link.link--text.list-menu__item {
    font-weight: bold;
    font-size: 1.5rem;
  }
  ul.header__submenu.list-menu a.header__menu-item.link.link--text.list-menu__item {
    color: black;
    padding: 10px 20px 0;
    &:hover {color: #555;}
  }
}
{% endcomment %}

{% comment %}support for mobile AND desktop image upload for the image banner section{% endcomment %}
a.banner__media.media>img {
  &.mob {@media screen and (min-width: 750px) {display: none;}}
  &.dt {@media screen and (max-width: 749px) {display: none;}}
}

{% comment %}Used for showing variant images instead of buttons for choosing color variant{% endcomment %}
.product-form__input input[type='radio'] + label.color {
  padding: 0;
  overflow: hidden;
  border-color: transparent;
  >img {
    max-width: 59px;
    pointer-events: none;
  }
}

/* HC - New blog template added - 26 Jul '21 */
.hc-same-num-row .media--landscape {
  padding-bottom: 0;
}
.hc-same-num-row .media model-viewer, .hc-same-num-row .media>:not(.zoom, .hc-same-num-row .deferred-media__poster-button){
  position: initial;
}
@media screen and (min-width: 750px){
  .hc-same-num-row .blog-articles {
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: 2rem;
  }
  .hc-same-num-row .blog-articles > *:first-child, .hc-same-num-row .blog-articles > *:nth-child(4), .hc-same-num-row .blog-articles > *:last-child:nth-child(2), .hc-same-num-row .blog-articles > *:last-child:nth-child(5){
    grid-column: unset;
  }
  .hc-same-num-row .blog-articles > *:first-child, .hc-same-num-row .blog-articles > *:nth-child(4), .hc-same-num-row .blog-articles > *:last-child:nth-child(2), .hc-same-num-row .blog-articles > *:last-child:nth-child(5) {
    grid-column: auto !important;
  }
}
@media screen and (min-width: 750px) and (max-width: 1024px){
  .hc-same-num-row .blog-articles {
    grid-template-columns: 1fr 1fr;
  }
}
div#blogs {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-wrap: wrap;
  @media screen and (max-width:640px) {justify-content: space-between;}
  >a {
    border: 1px solid rgb(209, 209, 209);
    padding: 4px 16px;
    border-radius: 20px;
    color: black;
    text-decoration: none;
    margin: 0 5px 10px;
    transition: .5s;
    &.active {background: rgb(255, 218, 236);}
    &:hover {background: rgb(243, 243, 243);}
  }
}
section.shopify-section.spaced-section.btns, div#subcols {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  >a {
    margin: 0 5px 10px;
    text-decoration: none;
    text-align: center;
  }
}
div#subcols {margin-bottom: 20px;
  >a {
    background: #8a9e93;
    color: #ffffff;
    flex: 0 1 200px;
    border-radius: 49px;
    padding: 7px 10px;
  }
  @media screen and (max-width:768px){
    justify-content: flex-start;
    flex-wrap: nowrap;
    overflow-x: auto;
    >a {
      flex: 1 0 auto;
      min-width: 36%;
    }
  }
}
a.banner__media.media {z-index: 2;}
button.product-form__submit.button--full-width {max-width: 550px;}
@media screen and (min-width: 990px) {
  .product:not(.product--no-media):not(.featured-product) .product__media-wrapper {
    max-width: 34%;
    width: calc(34% - 1rem / 2);
  }
  .product:not(.product--no-media):not(.featured-product) .product__info-wrapper {
    padding-left: 4rem;
    max-width: 66%;
    width: calc(66% - 1rem / 2);
  }
}

{% comment %}Hide color options for disabled colors {% endcomment %}
.product-form__input input[type="radio"][name="Color"].disabled+label,
.product-form__input input[type="radio"][name="Color"]:disabled+label {display: none;}
div.fwbadge {
  position: absolute;
  bottom: 50px;
  left: 0;
  width: 100%;
  text-align: center;
}
.button {border-radius: 25px;}
section.spaced-section--full-width+section.spaced-section--full-width {margin-top: {{ settings.bannerspace }}px;}
div.accordion> {
  .a {
    height: 0;
    overflow: hidden;
    margin: 0;
    padding: 0 15px;
    transition: .5s;
  }
  .current {
    padding: 10px 15px;
    height: auto;
    transition: .5s;
  }
